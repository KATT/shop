{
  "name": "@katt/shop",
  "version": "1.0.0",
  "description": "",
  "author": "KATT",
  "scripts": {
    "precommit": "lint-staged",
    "build:api": "cd api && yarn build",
    "build:web": "cd web && yarn build",
    "build:e2e": "cd e2e && yarn build",
    "setup:api": "cd api && yarn install",
    "setup:web": "cd web && yarn install",
    "setup:e2e": "cd e2e && yarn install",
    "setup": "npm-run-all --parallel setup:*",
    "build": "npm-run-all --parallel build:*",
    "start:api": "cd api && yarn start",
    "start:web": "cd web && yarn start -- -p 5000",
    "start:e2e": "cd e2e && yarn start",
    "dev:api": "cd api && yarn dev",
    "dev:web": "cd web && yarn dev -- -p 5000",
    "dev": "npm-run-all --parallel dev:*",
    "test": "echo Insert some tests here!",
    "e2e": "yarn build && npm-run-all --parallel --race start:*"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}!api/src/generated/*.ts": ["tslint --fix", "git add"]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "npm-run-all": "^4.1.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
}
